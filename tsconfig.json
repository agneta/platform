{
  "compilerOptions": {
    "lib": ["es2015"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "*": ["./node_modules/@types/*", "*"]
    },
    "allowJs": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "exclude": ["node_modules/**", "bower_components/**", "dist/**"]
}
