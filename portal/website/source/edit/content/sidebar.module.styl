.site-menu{

	width: 420px;

	.search-list{
		background: color-grey;
		padding: 0 18px;
		input{
			background: transparent;
			margin: 0;
			padding: 18px;
			.md-errors-spacer{
				display: none;
			}
		}
	}

	.ag-list-item{
		.image{
			width: 60px;
			height: 60px;
			border-radius: 100%;
			background-position: center;
			background-size: cover;
		}
	}

	.highlighted{
		font-weight: bold;
		color: black;
	}

	.log{
		md-list-item{
			padding: 10px 0;
			.time{
				color: color-primary;
				font-weight: bold;
			}
			.message{
				white-space: pre-line;
				line-height: 1.5em;
			}
			p{
				margin: 0;
			}
		}
	}
}
