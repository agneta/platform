<div ng-if="field.type == 'media'" class="field media">
    <div ng-show="!data.__value.location" ng-click="media.edit(field,parent,key)" class="empty" layout="column" layout-align="center">
        <p class="intro">
            <%-lng('editor.media.empty.intro')%>
        </p>
        <md-icon md-svg-src="<%-get_icon('agneta/media')%>"></md-icon>
        <p>
            <%-lng('editor.media.empty.action')%>
        </p>
    </div>
    <div ng-show="data.__value.location" class="details" layout="row" layout-align="start stretch">
        <div class="thumbnail" style="background-image:{{media.backgroundImage(data)}}" layout="column" layout-align="center center">
          <md-icon ng-if="!media.hasBackground(data)" md-svg-src="{{media.getIcon(data)}}"></md-icon>
        </div>
        <div layout="column" flex="auto">
            <div layout="row">
                <p class="title">{{data.__value.location}}</p>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="media.edit(field,parent,key)" aria-label="edit media">
                    <md-icon md-svg-src="<%-get_icon('material/mode-edit')%>"></md-icon>
                </md-button>
            </div>
            <div layout="column">
                <%-template('edit/main/object-fields')%>
            </div>
        </div>
    </div>
</div>
