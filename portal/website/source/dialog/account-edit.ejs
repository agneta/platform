<%
var form = page.form;
if(_.isString(form)){
	form = get_data('form/presets/'+form);
}
%>
<md-toolbar>
  <div class="md-toolbar-tools">
    <h2><%-lng(page.title)%></h2>
    <span flex></span>
    <md-button class="md-icon-button" ng-click="close()">
      <md-icon md-svg-src=<%-get_icon( "material/close")%> aria-label="Cancel"></md-icon>
    </md-button>
  </div>
</md-toolbar>

<md-dialog-content class="account-add-content">
  <%-template('form',{form:form})%>
    <%-template('ui/loader')%>

</md-dialog-content>

<md-dialog-actions layout="row" md-whiteframe="2">
  <md-button class="md-warn" ng-click="data.remove(<%-form.name%>Fields.id)">
    <md-icon  aria-label="delete" class="md-secondary delete" md-svg-src="<%-get_icon('material/delete')%>"></md-icon>
    Delete
  </md-button>
  <span flex> </span>
  <md-button ng-click="close()">
    <%-lng('general.cancel')%>
  </md-button>
  <md-button ng-click="update()" ng-disabled="<%-form.name%>.$invalid" md-autofocus class="md-raised md-primary">
    <%-lng('general.update')%>
  </md-button>
</md-dialog-actions>
