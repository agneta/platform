<select-search-ctrl>
    <md-select md-on-open="clearSearchTerm()" md-container-class="select-search" placeholder="{{type.single}}" ng-show="feeds" ng-model="page.feedSelected" ng-change="loadTotals()" ng-model-options="{trackBy: '$value.id'}">

        <md-select-header>
            <input ng-model="searchTerm" type="search" placeholder="Search..." class="md-text">
        </md-select-header>

        <md-optgroup>
            <md-option ng-value="undefined">All Feeds</md-option>
            <md-option ng-value="feed" ng-repeat="feed in feeds | filter:searchTerm">{{feed.value}}</md-option>
        </md-optgroup>

    </md-select>
</select-search-ctrl>
