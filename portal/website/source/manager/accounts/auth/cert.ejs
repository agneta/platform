<div class="roles section ssh" layout="column">

  <div class="header md-padding" layout-align="left center" layout="row">
    <h3 class="title">Certificates</h3>
    <span flex></span>
    <md-button ng-click="cert.add()" class="md-fab md-mini md-white" aria-label="Add">
      <md-icon md-svg-icon="<%-get_icon('material/add')%>"></md-icon>
    </md-button>
  </div>

  <md-divider></md-divider>

  <div class="content">

    <%-template('ui/loader',{prop:'cert.loading'})%>

    <div ng-if="!cert.keys.length" class="no-keys" layout="column" layout-align="center center">
      <md-icon md-svg-src="<%-get_icon('material/card-membership')%>"></md-icon>
      <p class="title">No certificates found</p>
      <p class="message">A client certificate enhances the authentication of a user and provides an instant way to login to your account without supplying a username and password.</p>
    </div>

    <md-list ng-if="cert.keys.length">
      <div ng-repeat="key in cert.keys">
        <md-list-item ng-click="cert.open(key)" class="role">
          <p>
            {{key.title}}
          </p>
          <p>
            {{key.createdAt}}
          </p>
          <md-icon ng-click="cert.remove(key)" aria-label="delete" class="md-secondary delete" md-svg-src="<%-get_icon('material/delete')%>"></md-icon>
        </md-list-item>
        <md-divider></md-divider>
      </div>
    </md-list>

  </div>

</div>
