.template-email-inbox{

  .list-email{
    .header{
      padding: 10px;
      background: whitesmoke;
      border-bottom: solid 2px color-primary;
    }
    .ag-list-item{
      padding: 0 10px;
      padding-bottom: 10px;
      border-bottom: solid 1px grey;
    }
    .item{
      width: 100%;
      margin: 0;
      .title{
        font-weight: bold;
      }
      .name{
        font-size: 0.8em;
      }
      .address{
        text-align: right;
      }
      span{
        font-size: 0.7em;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;
        position: relative;
      }
    }
  }
}
