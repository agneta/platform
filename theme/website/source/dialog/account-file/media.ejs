<div layout="column">


  <div class="md-padding preview ag-margin"
    layout="column">

    <div class="image"
      style="background-image:url({{media.source}})">
    </div>

    <div class="details ag-margin"
      layout="column">

      <%-template('dialog/account-file/selection',page.sharing)%>

        <a href="{{media.url}}"
          target="_blank"
          class="url">
          <div layout="column">
            <span>Original file:</span>
            <span class="link">{{media.url}}</span>
          </div>
        </a>

        <div layout="row"
          layout-align="end center">
          <md-button class="md-warn">
            <md-icon md-svg-src="<%-get_icon('material/delete')%>"
              aria-label="delete"></md-icon>
            <span>Delete</span>
          </md-button>
          <md-button type="file"
            ngf-accept="accept"
            ngf-select="media.upload($file)">
            <md-icon md-svg-src="<%-get_icon('material/file-upload')%>"
              aria-label="upload"></md-icon>
            <span>Upload</span>
          </md-button>
        </div>

    </div>

  </div>


</div>