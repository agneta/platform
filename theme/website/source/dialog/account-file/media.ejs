<div layout="column">

  <%-template('dialog/account-file/share')%>

  <div class="md-padding preview" layout="column">
    <div class="image">
      <img src="{{media.source}}" class="picture" />
    </div>
    <a href="{{media.url}}"
    target="_blank"
    class="url">
    <div
    layout="column"
    >
    <span>Original file:</span>
    <span flex="auto" class="link">{{media.url}}</span>
  </div>
</a>
</div>

<div layout="row" layout-align="end center">
  <md-button class="md-warn">
    <md-icon md-svg-src="<%-get_icon('material/delete')%>" aria-label="delete"></md-icon>
    <span>Delete</span>
  </md-button>
  <md-button type="file" ngf-accept="accept" ngf-select="media.upload($file)">
    <md-icon md-svg-src="<%-get_icon('material/file-upload')%>" aria-label="upload"></md-icon>
    <span>Upload</span>
  </md-button>
</div>

</div>
