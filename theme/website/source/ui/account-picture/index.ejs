<%
  var model = locals.model = locals.model || 'account';
  var ngStyle = `ng-style="{'background-image': background?'url(' + background + ')':null}"`
  var attr = `ag-account-picture ng-model="${model}"`;
  var elmClass = 'ag-account-picture';
%>

<%if(locals.click){%>

<md-button
class="editable md-fab <%-elmClass%>"
ng-click="<%-locals.click%>"
<%-ngStyle%>
<%-attr%>
aria-label="Account">
<%-template('ui/account-picture/icon',locals)%>
<div class="action" layout-align="center center" layout="column">
<md-icon
aria-label="edit account picture"
md-svg-src="<%-get_icon('material/edit')%>">
</md-icon>
</div>
</md-button>

<%}else{%>

  <div
  layout="column"
  layout-align="center center"
  <%-attr%>
  <%-ngStyle%>
  class="<%-elmClass%>"
  >
  <%-template('ui/account-picture/icon',locals)%>

  </div>

<%}%>
