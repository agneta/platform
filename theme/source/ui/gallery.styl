.swiper-container{

  height: 100%;
  width: 100%;

  .swiper-wrapper{
    padding: 0;
    margin: 0;
    list-style: none;
    .swiper-slide{
      a{
        width: 100%;
        height: 100%;
        >img{
          display: flex;
          width: 100%;
          height: auto;
        }
      }
    }
  }

  .swiper-pagination-bullets{
    .swiper-pagination-bullet{
      background: white;
      padding: 2px;
      box-shadow: 0 1px 5px #2d2d2d;
      opacity: .7;

      &.swiper-pagination-bullet-active{
        padding: 3px;
        opacity: 1;
      }
    }
  }

}
