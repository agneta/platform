<div layout="row" layout-align="center center">
  <%for(var action of step.actions){
    if(_.isString(action)){
      action = page.action[action]
    }

    var ngShow;

    if(action.show){
      ngShow = `ng-show="${action.show}"`;
    }

    %>
  <md-button ng-disabled="<%-action.disabled%>" <%-ngShow%> class="md-primary round md-raised" ng-click="<%-action.click%>">
      <%-lng(action.title)%>
  </md-button>
  <%}%>
</div>
