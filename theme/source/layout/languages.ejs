<md-menu md-offset="0 40" hide show-gt-xs ng-show="viewData.languages.length>1">
    <%if(data.simple){%>
        <a class="<%-data.class%>" ng-click="$mdMenu.open()"><%-site.lang%></a>
      <%}else{%>
    <%-template('ui/button',{
    title:lng('general.languages'),
    click:'$mdMenu.open()',
    noInk: true,
    icon:"material/language"
  })%>
  <%}%>


    <md-menu-content>

        <md-menu-item ng-repeat="language in viewData.languages">
            <md-button class="{{language.linkClass}}" target="_self" ng-href="{{language.href}}{{queryString}}">
                {{language.name}}
            </md-button>
        </md-menu-item>

    </md-menu-content>
</md-menu>
