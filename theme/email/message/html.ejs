      <%-lng(body)%>
    </div>
    <table class="account">
      <tr>
        <td>
          <div
          style="background-image:url(<%-account.picture%>)"
            class="image">
          </div>
        </td>
        <td>
          <div class="regards">
            <p>Regards,</p>
